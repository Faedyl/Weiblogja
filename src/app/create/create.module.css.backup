.container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 2rem 1rem;
}

.title {
	font-size: 2.5rem;
	font-weight: bold;
	margin-bottom: 2rem;
	color: #1a202c;
}

.subtitle {
	font-size: 1.5rem;
	font-weight: bold;
	margin-bottom: 1rem;
	color: #2d3748;
}

.card {
	background: white;
	border-radius: 8px;
	box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	padding: 2rem;
	margin-bottom: 2rem;
}

.uploadSection {
	margin-bottom: 1.5rem;
}

.label {
	display: block;
	font-size: 1.125rem;
	font-weight: 600;
	margin-bottom: 1rem;
	color: #2d3748;
}

.fileInput {
	display: block;
	width: 100%;
	padding: 0.75rem;
	border: 2px solid #e2e8f0;
	border-radius: 6px;
	font-size: 0.875rem;
	cursor: pointer;
	transition: border-color 0.2s;
}

.fileInput:hover {
	border-color: #cbd5e0;
}

.fileInput::-webkit-file-upload-button {
	margin-right: 1rem;
	padding: 0.75rem 1.5rem;
	border-radius: 9999px;
	border: none;
	background-color: #ebf8ff;
	color: #2b6cb0;
	font-weight: 600;
	font-size: 0.875rem;
	cursor: pointer;
	transition: background-color 0.2s;
}

.fileInput::-webkit-file-upload-button:hover {
	background-color: #bee3f8;
}

.fileInfo {
	margin-top: 0.75rem;
	font-size: 0.875rem;
	color: #4a5568;
}

.button {
	padding: 0.75rem 2rem;
	border-radius: 6px;
	font-weight: 600;
	font-size: 1rem;
	border: none;
	cursor: pointer;
	transition: all 0.2s;
}

.button:disabled {
	background-color: #cbd5e0;
	cursor: not-allowed;
	opacity: 0.6;
}

.primaryButton {
	background-color: #3182ce;
	color: white;
}

.primaryButton:hover:not(:disabled) {
	background-color: #2c5aa0;
}

.secondaryButton {
	background-color: #718096;
	color: white;
}

.secondaryButton:hover {
	background-color: #4a5568;
}

.successButton {
	background-color: #38a169;
	color: white;
}

.successButton:hover {
	background-color: #2f855a;
}

.accentButton {
	background-color: #805ad5;
	color: white;
}

.accentButton:hover {
	background-color: #6b46c1;
}

.statusSection {
	margin-bottom: 1rem;
}

.statusHeader {
	display: flex;
	justify-content: space-between;
	margin-bottom: 0.5rem;
}

.statusMessage {
	font-weight: 500;
	color: #2d3748;
}

.statusProgress {
	color: #718096;
}

.progressBarContainer {
	width: 100%;
	background-color: #e2e8f0;
	border-radius: 9999px;
	height: 0.75rem;
	overflow: hidden;
}

.progressBar {
	height: 100%;
	background-color: #3182ce;
	border-radius: 9999px;
	transition: width 0.5s ease;
}

.progressBarError {
	background-color: #f56565;
}

.errorBox {
	background-color: #fff5f5;
	border: 1px solid: #feb2b2;
	border-radius: 6px;
	padding: 1rem;
	color: #c53030;
}

.resultContainer {
	display: flex;
	flex-direction: column;
	gap: 2rem;
}

.resultHeader {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	margin-bottom: 1.5rem;
	gap: 1rem;
	flex-wrap: wrap;
}

.resultTitle {
	font-size: 2rem;
	font-weight: bold;
	color: #1a202c;
	flex: 1;
	min-width: 300px;
}

.summary {
	font-size: 1.125rem;
	color: #4a5568;
	font-style: italic;
	margin-bottom: 1.5rem;
	line-height: 1.6;
}

.tagsContainer {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	margin-bottom: 2rem;
}

.tag {
	background-color: #bee3f8;
	color: #2c5aa0;
	padding: 0.25rem 0.75rem;
	border-radius: 9999px;
	font-size: 0.875rem;
	font-weight: 500;
}

.content {
	font-size: 1.125rem;
	line-height: 1.75;
	color: #2d3748;
}

.content h2 {
	font-size: 1.5rem;
	font-weight: bold;
	margin-top: 2rem;
	margin-bottom: 1rem;
	color: #1a202c;
}

.content p {
	margin-bottom: 1rem;
}

.content strong {
	font-weight: 600;
	color: #1a202c;
}

.content em {
	font-style: italic;
}

.content ul,
.content ol {
	margin-left: 1.5rem;
	margin-bottom: 1rem;
}

.content li {
	margin-bottom: 0.5rem;
}

.actionButtons {
	display: flex;
	gap: 1rem;
	flex-wrap: wrap;
}

@media (max-width: 768px) {
	.title {
		font-size: 2rem;
	}

	.resultHeader {
		flex-direction: column;
	}

	.resultTitle {
		min-width: 100%;
	}

	.actionButtons {
		flex-direction: column;
	}

	.button {
		width: 100%;
	}
}
